<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
   	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- layout 1 -->
	
	<definition name="layout1" template="/WEB-INF/views/layout/layout1.jsp">
		<put-attribute name="header" value="/WEB-INF/views/layout/header.jsp"/>
		<put-attribute name="nav" value="/WEB-INF/views/layout/nav.jsp"/>
		<put-attribute name="content" value="/WEB-INF/views/layout/content.jsp"/>
	</definition>
	
	<!-- layout1 macro -->
	<definition name="*" extends="layout1">
		<put-attribute name="home" value="/WEB-INF/views/{1}.jsp"></put-attribute>
	</definition>
	<definition name="*/*" extends="layout1">
		<put-attribute name="home" value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute>
	</definition>
	<definition name="*/*/*" extends="layout1">
		<put-attribute name="home" value="/WEB-INF/views/{1}/{2}/{3}.jsp"></put-attribute>
	</definition>
</tiles-definitions>